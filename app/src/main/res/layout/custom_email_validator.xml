<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/email_validator_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/email_validator_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_validator_iv"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="81dp" />

    <ImageView
        android:id="@+id/email_validator_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_validator_tv"
        android:layout_alignEnd="@id/email_validator_et"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
